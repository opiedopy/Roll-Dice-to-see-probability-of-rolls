import random

# Initialize variables for tracking results
min_value = 1
max_value = 6
rolls = 25  # Number of times to roll the dice
counts = [0] * 7  # List to count occurrences of each die value (1-6, index 0 unused)
pairs = [0] * 7    # List to count pairs of each number (1-6, index 0 unused)
total_pairs = 0    # Total number of pairs rolled
total_dice = 0     # Total number of dice rolled

print("Welcome to the Dice Roller! Press <Enter> to roll two dice.")

for _ in range(rolls):
    input("Press <Enter> to roll...")
    print("Rolling the dice...")
    
    # Roll two dice
    die1 = random.randint(min_value, max_value)
    die2 = random.randint(min_value, max_value)
    
    print(f"First Die: {die1}")
    print(f"Second Die: {die2}")
    
    # Update counts for individual die values
    counts[die1] += 1
    counts[die2] += 1
    total_dice += 2
    
    # Check for pairs
    if die1 == die2:
        total_pairs += 1
        pairs[die1] += 1
        print(f"You rolled a pair! This is pair #{total_pairs}")
    
    # Display current statistics
    print(f"Total dice rolled: {total_dice} (in {total_dice // 2} rolls)")
    for i in range(1, 7):
        percentage = round(counts[i] / total_dice * 100, 2) if total_dice > 0 else 0
        print(f"Quantity of rolled <{i}>: {counts[i]} ({percentage}%)")
    
    print(f"Total pairs rolled: {total_pairs}")
    print("Pairs breakdown:")
    for i in range(1, 7):
        print(f"Pair of {i}'s: {pairs[i]}")
    print("\n" + "="*40 + "\n")  # Separator for readability

print("Thanks for playing!")
